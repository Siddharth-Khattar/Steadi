{
  "productName": "Steadi",
  "version": "0.0.4",
  "identifier": "com.steadi.teleprompter",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": false,
    "windows": [
      {
        "label": "main",
        "title": "Steadi",
        "url": "main/index.html",
        "width": 1200,
        "height": 800,
        "minWidth": 680,
        "minHeight": 400,
        "center": true,
        "resizable": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "Copyright \u00a9 2026 Siddharth Khattar",
    "category": "Productivity",
    "shortDescription": "Cross-platform invisible teleprompter",
    "longDescription": "Steadi displays your script near the webcam in an always-on-top overlay that is completely invisible during screen sharing on Zoom, Teams, Meet, and OBS. Write in markdown, present with auto-scroll, and maintain natural eye contact.",
    "licenseFile": "../LICENSE",
    "homepage": "https://github.com/Siddharth-Khattar/Steadi"
  }
}
